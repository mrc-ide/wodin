{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  }
}